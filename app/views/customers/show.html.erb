<h5>マイページ</h5>

<%= form_with model: @customer, url:edit_customers_path, local:true do |f| %>
<div class="form-group">
  <label>登録情報<%= f.submit "編集する", :class=>'btn btn-success' %></label>
    <li>氏名  <%= @customer.last_name %> <%= @customer.first_name %></li>
    <li>カナ  <%= @customer.last_name_kana %> <%= @customer.first_name_kana %></li>
    <li>郵便番号  <%= @customer.postal_code %></li>
    <li>住所  <%= @customer.address %></li>
    <li>電話番号  <%= @customer.telephone_number %></li>
    <li>メールアドレス  <%= @customer.email %></li>
</div>
<% end %>

