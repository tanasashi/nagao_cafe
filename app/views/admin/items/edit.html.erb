<h1>商品編集</h1>

<%= form_with model:@item, url:admin_item_path, local:true do |f| %>

 <div class="form-group">
 　<%= f.attachment_field :image %>
</div>
<div class="form-group">
  商品名<%= f.text_field :name %>
</div>
<div class="form-group">
  商品説明<%= f.text_area :introduction %>
</div>
<div class="form-group">
 ジャンル<%= f.collection_select(:genre_id, Genre.all, :id, :name) %>
</div>
<div class="form-group">
 税抜き価格<%= f.text_field :price %>円
</div>
<div class="form-group">
 販売ステータス
  <%= f.radio_button :is_active, :true %>
  <%= f.label :is_active, "販売中" %>
  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active, "販売停止中" %>
</div>
<div class="form-group">
  <%= f.submit "変更を保存", :class => "btn btn-success" %>
</div>

<% end %>