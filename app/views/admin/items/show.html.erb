<table>
  <h2>商品詳細<h2>
    <thead>
      <th>商品名</th>
      <th>商品説明</th>
      <th>ジャンル</th>
      <th>税込み価格</th>
      <th>販売ステータス</th>
    </thead>
<%= form_with model:@item, url:edit_admin_item_path, local:true do |f| %>
    <tbody>
    <tr>
     <td><%= @item.name %></td>
     <td><%= @item.introduction %></td>
     <td><%= @item.genre.name %></td>
     <td><%= @item.price %></td>
     <td><%= @item.is_active %></td>
     <td><%= f.submit '編集する', class: "btn btn-secondary" %></td>
    </tr>
    </tbody>
<% end %>
</table>