<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
<div class="form-group">
    <label>ジャンル名</label>
    <%= f.text_field :name %>
   <%= f.submit '新規登録', :class=>'btn btn-success' %>
</div>
<% end %>

<% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する",edit_admin_genre_path(genre.id) %></td>
      </tr>
      <% end %>