<h3>ショッピングカート</h3><h5><%= button_to "カートを空にする", cart_items_destroy_all_path, method: :delete, "data-confirm" => "Are You Sure?" %></h5>

<table>
<thead>
  <tr>
    <th>商品名</th>
    <th>単価（税込み）</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
  </thead>
  <tbody>


      <% @goukei = 0 %>

       <% @cart_item.each do |cart_item| %>
        <tr>
          <th><%= attachment_image_tag cart_item.item, :image, :fill, 50, 50, format: 'jpeg', fallback: 'no_image.jpg', size: "40x40"%>
          <%= cart_item.item.name %></th>
          <th><%= (cart_item.item.price * 1.1).floor %></th>

          <%= form_with model:@cart_item, url:cart_item_path(cart_item.id), method: :patch, local:true do |f| %>
          <th><%= f.select :amount, *[1..7], selected: cart_item.amount %>
          <%= f.submit "変更" %></th>
           <% end %>

          <th><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></th>
          <th><%= link_to "削除する", cart_item_path(cart_item), method: :delete, "data-confirm" => "Are You Sure?" %></th>
           <% @goukei += (cart_item.item.price * 1.1).floor * cart_item.amount %>
          <% end %>
        </tr>
    </tbody>
  </table>
合計金額 <%= @goukei %>

  <%= link_to "買い物を続ける", items_path %>