<table>
  <h2>商品詳細<h2>
    <thead>
      <th>商品名</th>
      <th>商品説明</th>
      <th>ジャンル</th>
      <th>税込み価格</th>
      <th>販売ステータス</th>
    </thead>
    <tbody>
    <tr>
     <td><%= @item.name %></td>
     <td><%= @item.introduction %></td>
     <td><%= @item.genre.name %></td>
     <td><%= @item.price %></td>
     <td><%= @item.is_active %></td>
     <td><%= link_to '編集する', edit_admin_item_path(@item.id) %></td>
    </tr>
    </tbody>
</table>