<h3>配送先一覧・登録</h3>
<table>
  <%= form_with model:@address, local:true do |f| %>
  <div class="form-group">
    郵便番号(ハイフンなし)<%= f.text_field :postal_code %>
  </div class="form-group">

  <div class="form-group">
    住所<%= f.text_field :address %>
  </div class="form-group">
  <div class="form-group">
  宛名<%= f.text_field :name %>

  <%= f.submit '新規登録' %>
  </div class="form-group">

<% end %>
<thead>

  <tr>
  <td>郵便番号  </td>
  <td>住所  </td>
  <td>宛名  </td>
  <td></td>
  </tr>
<thead>
<tbody>
  <% @addresses.each do |address| %>
  <tr>
  <td><%= address.postal_code %></td>
  <td><%= address.address %></td>
  <td><%= address.name %></td>
  <td><%= link_to "Edit",edit_address_path(address.id) %></td>
  <td><%= link_to "Destroy", address_path(address.id), method: :delete, "data-confirm" => "Are You Sure?" %></td>
  </tr>
<% end %>
</tbody>
</table>
