<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


<div class="d-flex flex-column-reverse">
 <nav class="navbar navbar-expand-lg navbar-light bg-light">

  <i class="far fa-birthday-cake"></i>

    <% if admin_signed_in? %>

    <i class="fas fa-birthday-cake"> Nagano_Cake</i>

     <form class="form-inline ml-auto">
        <button type="button" class="btn btn-light"><%= link_to "商品一覧", admin_items_path %></button>
        <button type="button" class="btn btn-light"><%= link_to "会員一覧", admin_customers_path %></button>
        <button type="button" class="btn btn-light"><%= link_to "注文履歴一覧", admin_path %></button>
        <button type="button" class="btn btn-light"><%= link_to "ジャンル一覧", admin_genres_path %></button>
        <button type="button" class="btn btn-light"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></button>
     </form>
    <% elsif customer_signed_in? %>

    <i class="fas fa-birthday-cake"> Nagano_Cake</i>

    <div class="collapse navbar-collapse justify-content-center">ようこそ、<%= current_customer.last_name %>さん！</div>

    <form class="form-inline ml-auto">
     <button type="button" class="btn btn-light"><%= link_to "マイページ", customers_mypage_path %></button>
     <button type="button" class="btn btn-light"><%= link_to "商品一覧", items_path %></button>
     <button type="button" class="btn btn-light"><%= link_to "カート", cart_items_path %></button>
     <button type="button" class="btn btn-light"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></button>
    </form>

    <% else %>

    <i class="fas fa-birthday-cake"> Nagano_Cake</i>

     <form class="form-inline ml-auto">
        <button type="button" class="btn btn-light"><%= link_to "About", about_path %></button>
        <button type="button" class="btn btn-light"><%= link_to "賞品一覧", admin_items_path %></button>
        <button type="button" class="btn btn-light"><%= link_to "新規登録", new_customer_registration_path %></button>
        <button type="button" class="btn btn-light"><%= link_to "ログイン", new_customer_session_path %></button>
     </form>
    <% end %>
   </nav>
    </div>

    <%= yield %>


  </body>
</html>
